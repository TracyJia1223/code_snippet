<%= render 'shared/errors', obj: @snippet %>
<h1 class="center">Create a Code Snippet</h1>
<hr>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@snippet, html: { class: "form-horizontal", role: "form"}) do |f| %>
    <div class = "form-group">
      <div class = "control-label col-sm-2">
        <%= f.label :kind %>
      </div>
      <div class="col-sm-2">
        <div class="dropdown">
          <%= f.collection_select :kind_id, Kind.all, :id, :language, :prompt => true %>
        </div>
      </div>
    </div>
    <div class = "form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of snippet", autofocus: true %>
      </div>
    </div>
    <div class = "form-group">
      <div class="control-label col-sm-2">
        <%= f.label :work %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :work, rows: 10, class: "form-control", placeholder: "Body of snippet" %>
      </div>
    </div>
    <div class = "form-group">
      <div class="control-label col-sm-3">
        <label class="checkbox-inline">
          <%= f.check_box :is_private?, {}, "1", "0" %>
          <input name="snippet[is_private?]" type="hidden" value="0" >
          <input id="snippet_is_private?" name="snippet[is_private?]" type="checkbox" value="1" ><span id="private">Private?</span>
        </label>
      </div>
    </div>
    <div class = "form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :Save, class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
