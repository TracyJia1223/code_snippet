<h1 class="center">Code Snippets</h1>
<div align="center">
  <% @kinds.each do |kind| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <h4><%= link_to "#{kind.language}", language_path(kind.id) %></h4>
          </li>
          <li><small><%= pluralize(kind.count_for, "snippet") %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>
